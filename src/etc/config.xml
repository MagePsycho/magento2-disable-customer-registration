<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <magepsycho_disableregistration>
            <general>
                <enabled>0</enabled>
                <debug>0</debug>
            </general>
            <registration>
                <registration_option>1</registration_option>
                <enable_disabled_message>0</enable_disabled_message>
                <disabled_message>Sorry, the new account registration is disabled. You can contact us via email: info@your-store.com if you are interested.</disabled_message>
            </registration>
        </magepsycho_disableregistration>
    </default>
</config>
